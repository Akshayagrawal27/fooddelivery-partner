<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fabStyle">
        <item name="android:layout_marginBottom">@dimen/fab_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_horizontal_margin</item>
        <item name="android:elevation">@dimen/fab_elevation</item>
    </style>

    <style name="list_margin">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
